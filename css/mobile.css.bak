@media (max-width: 880px) {
    body {
        font-size: 100%;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 20px 0;
    }

    .logo {
        margin: 0;
    }

/*---- Hamburger --*/
    #btn-mobile {
        display: flex;
        border: none;
        background: none;
        cursor: pointer;
        align-items: center;
    }

    .menu {
        display: block;
        background-color: #f7f7f7;
        position: absolute;
        top: 60px;
        right: 16px;
        flex-direction: column;
        gap: 0;  
        z-index: 1000; 
        visibility: hidden; 
    }

    .menu li {
        border-radius: 0;
    }
    .menu a {
        text-align: left; 
        border-bottom: 1px solid rgba(0, 0, 0, 0.07);
    }

    #nav.active .menu {
        visibility: visible;
    }

/*---- Conte√∫do --*/
    .grid {
        grid-template-columns: 1fr;
    }

    .subtitle, .detach {
        max-width: 100vw;
        padding: 15px 10px;
    }

    .img-bike{
        max-width: 100vw;
    }

    .detach h2 {
        font-size: 3rem;
        text-align: center;
    }

    .subtitle p {
        text-align: left;
    }
}